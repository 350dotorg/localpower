upstream app_servers {
    server 127.0.0.1:3031;
}

# repowerathome.com
server {
    server_name repowerathome.com;
    include sites-available/rah_base_http;
}
server {
    server_name repowerathome.com;
    include sites-available/rah_base_https;
}
server {
    server_name www.repowerathome.com;
    rewrite ^(.*)$ http://repowerathome.com$1 permanent;
}

# ec2 public dns name
server {
    server_name _public_dns_name;
    include sites-available/rah_base_http;
}
server {
    server_name _public_dns_name;
    include sites-available/rah_base_https;
}

# staging.repowerathome.com
server {
    server_name staging.repowerathome.com;
    include sites-available/rah_base_http;
    satisfy  any;
    allow 157.130.44.166;
    auth_basic            "Restricted";
    auth_basic_user_file  /home/ubuntu/htpasswd;
    
}
server {
    server_name staging.repowerathome.com;
    include sites-available/rah_base_https;
    satisfy  any;
    allow 157.130.44.166;
    auth_basic            "Restricted";
    auth_basic_user_file  /home/ubuntu/htpasswd;
}

# Redirects for net and org
server {
    server_name .repowerathome.net .repowerathome.org;
    rewrite ^(.*)$ http://repowerathome.com$1 permanent;
}